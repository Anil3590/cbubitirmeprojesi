<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            app:srcCompat="@drawable/celal_bayar__niversitesi_yeni_logosu" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:fontFamily="serif"
            android:paddingTop="?attr/listPreferredItemPaddingEnd"
            android:text="Manisa Celal Bayar Üniversitesine Hoşgeldiniz"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Scanner"
            android:text="ŞU ANDA NEREDEYİM?" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="nereye"
            android:text="NEREYE GİTMEK İSTERSİN?" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="yemekhane"
            android:text="Yemekhane Listesi" />

        <Button
            android:id="@+id/ubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UBS" />

        <Button
            android:id="@+id/cbuweb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB SİTESİ" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="gonder"
            android:text="HAKKINDA"

            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>